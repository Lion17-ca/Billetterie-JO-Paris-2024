# Configuration générale
ENVIRONMENT=development

# Clé secrète pour la génération des JWT (à changer en production)
SECRET_KEY=your_secret_key_change_this_in_production

# Configuration des services
AUTH_SERVICE_URL=http://localhost:8000
TICKETS_SERVICE_URL=http://localhost:8001
ADMIN_SERVICE_URL=http://localhost:8003
VALIDATION_SERVICE_URL=http://localhost:8002

# Configuration de la base de données
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# URLs des bases de données pour chaque service
DATABASE_URL_AUTH=postgresql://postgres:postgres@localhost:5432/auth_db
DATABASE_URL_TICKETS=postgresql://postgres:postgres@localhost:5432/tickets_db
DATABASE_URL_ADMIN=postgresql://postgres:postgres@localhost:5432/admin_db
DATABASE_URL_VALIDATION=postgresql://postgres:postgres@localhost:5432/validation_db

# Configuration Redis
REDIS_HOST=localhost
REDIS_PORT=6379

# Configuration du frontend
REACT_APP_API_URL=http://localhost:8080
